# public_html/.htaccess
# Turn off directory listing
Options -Indexes

# Prefer Laravel's public index
DirectoryIndex public/index.php index.php index.html

# Block access to sensitive files
RedirectMatch 404 /\.(git|env|htaccess|env\.example|composer\.(json|lock)|artisan)$

<FilesMatch "(\.env|composer\.(json|lock)|artisan|README|\.gitignore)">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
  <IfModule !mod_authz_core.c>
    Deny from all
  </IfModule>
</FilesMatch>

RewriteEngine On

# If the request is already for /public/ or the resource exists, serve it
RewriteCond %{REQUEST_URI} !^/public/
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Otherwise route everything into the project's public/ directory
RewriteRule ^(.*)$ /public/$1 [L]